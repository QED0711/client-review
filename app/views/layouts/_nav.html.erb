        <div class="nav-item">
            <%= button_to "Sign In", users_sign_in_path, method: "get" %>
        </div>
        
        <div class="nav-item">
            <%= button_to "Sign Up", new_user_path, method: "get" %>
        </div>

    <% end %>
    

